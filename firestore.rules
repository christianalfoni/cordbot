rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - users can only read/write their own profile
    match /users/{userId} {
      // Allow authenticated users to read their own document
      allow read: if request.auth != null && request.auth.uid == userId;

      // Ensure required fields are present on create
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.keys().hasAll(['id', 'createdAt', 'lastLoginAt']);

      // Allow update with consistent userId and restrictions on hosting fields
      allow update: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.id == userId
                    // Users can only set hostingBetaRequested to true
                    && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['hostingBetaApproved', 'hostedBot'])
                        || request.resource.data.hostingBetaRequested == true)
                    // Prevent direct modification of hostedBot (Cloud Functions only)
                    && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['hostedBot'])
                        || !('hostedBot' in request.resource.data));

      // Bots subcollection - users can read their own bots
      match /bots/{botId} {
        // Allow authenticated users to read their own bots
        allow read: if request.auth != null && request.auth.uid == userId;

        // Allow users to update toolsConfig and oauthConnections for their own bots
        // Other fields can only be modified by Cloud Functions
        allow update: if request.auth != null
                      && request.auth.uid == userId
                      && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['toolsConfig', 'oauthConnections', 'updatedAt']);

        // Prevent create/delete - only Cloud Functions can create/delete bots
        allow create, delete: if false;
      }
    }

    // Guilds collection (OAuth-based shared bot model)
    match /guilds/{guildId} {
      // Users can read guilds they installed
      allow read: if request.auth != null
                  && request.auth.uid == resource.data.userId;

      // Users can update certain fields, but not subscriptionId, tier, or status
      allow update: if request.auth != null
                    && request.auth.uid == resource.data.userId
                    && !request.resource.data.diff(resource.data).affectedKeys()
                        .hasAny(['subscriptionId', 'tier', 'status', 'userId']);

      // Only Cloud Functions can create/delete guilds
      allow create, delete: if false;
    }

    // Guild deployments - INTERNAL ONLY (accessed via Cloud Functions)
    match /guildDeployments/{guildId} {
      allow read, write: if false;
    }

    // Free tier config - publicly readable for displaying available slots
    match /config/freeTier {
      allow read: if true;  // Public read access
      allow write: if false;  // Only Cloud Functions can write
    }

    // Subscriptions collection - Stripe subscription data
    match /subscriptions/{subscriptionId} {
      // Users can read their own subscriptions
      allow read: if request.auth != null
                  && request.auth.uid == resource.data.userId;

      // Only Cloud Functions can create/update/delete subscriptions
      allow write: if false;

      // Payments subcollection - payment records for subscriptions
      match /payments/{paymentId} {
        // Users can read payments for their subscriptions
        allow read: if request.auth != null
                    && request.auth.uid == get(/databases/$(database)/documents/subscriptions/$(subscriptionId)).data.userId;

        // Only Cloud Functions can write payments
        allow write: if false;
      }
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
